package conditionalStatements;

import java.util.Scanner;

public class Patterns1 {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the number");
		int n = sc.nextInt();
		int c=1;
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				if (j <=n-1-i)
					System.out.print(c+++" ");
				else
					System.out.print(" ");
			}
			System.out.println();
		}

	}

}
